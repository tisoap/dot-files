[user]
  name = Tiso Alvarez Puccinelli
  email = 28565117+tisoap@users.noreply.github.com
[core]
  editor = code --wait
  symlinks = true
  autocrlf = false
  fscache = true
  pager = less -FRSX
[color]
  diff = auto
  status = auto
  branch = auto
  interactive = true
[merge]
  tool = vscode
[mergetool "vscode"]
  cmd = code --wait $MERGED
[diff]
  tool = vscode
[difftool "vscode"]
  cmd = code --wait --diff $LOCAL $REMOTE
[rerere]
  enabled = true
[alias]
  a = add --all
  b = branch
  br = branch -m
  c = commit
  cn = commit --no-verify
  ca = commit --amend --no-edit --no-verify
  ch = checkout
  cb = checkout -b
  dl = branch -D
  dr = push origin --delete
  f = fetch --all --prune
  l = log --oneline
  p = push -u
  pf = push --force-with-lease
  ri = rebase --interactive
  s = status
  st = stash --include-untracked
  sp = stash pop
  clean = gc --aggressive --prune --force
[http]
  sslVerify = false
  postBuffer = 500M
  maxRequestBuffer = 100M
[push]
  default = current
[fetch]
  prune = true
[pull]
  rebase = true
[init]
  defaultBranch = main
